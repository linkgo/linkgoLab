extends ../layout

block head
    meta(name='description', content='linkgo.io web')
    meta(name='author', content='linkgo.io')
    title linkgo.io

    link(rel='stylesheet', href='views/home/index.css?#{cacheBreaker}')

    // <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
    // <link href='https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
    link(href='http://fonts.useso.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800', rel='stylesheet', type='text/css')
    link(href='http://fonts.useso.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic', rel='stylesheet', type='text/css')

block feet
    script(src="/vendor/fittext/jquery.fittext.js")
    script(src="/vendor/bootstrap/js/affix.js")
    script(src='/views/home/home.min.js')

block body
    nav#mainNav.navbar.navbar-default.navbar-linkgo.navbar-fixed-top
      .container-fluid
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand.page-scroll(href='#page-top')= __("brand")

        .collapse.navbar-collapse#bs-example-navbar-collapse-1
          ul.nav.navbar-nav.navbar-right
            li
              a(href="/blog/archives")= __("home.blog")
            li
              if user && user.username
                a(href="/logout")= user.username
              else
                a(href="/login")= __("home.login")

    header
      .header-content
        .header-content-inner
          h1= __("home.slogan")
          hr
          p= __("home.description")
          p=testval
          a.btn.btn-primary.btn-xl(href='#about')= __("home.find_out_more")

    section#portfolio.no-padding
      .container-fluid
        .row.no-gutter
          .col-lg-6.col-sm-6
            a.portfolio-box(href='#')
              img.img-responsive(src='images/portfolio/iot3-650-350.png', alt='')
              .portfolio-box-caption
                .portfolio-box-caption-content
                  .project-category.text-faded
                    =__("home.category_solution")
                  .project-name
                    =__("home.project_name_distributed_data_collection")
          .col-lg-6.col-sm-6
            a.portfolio-box(href='#')
              img.img-responsive(src='images/portfolio/iot2-650-350.png', alt='')
              .portfolio-box-caption
                .portfolio-box-caption-content
                  .project-category.text-faded
                    =__("home.category_device")
                  .project-name
                    =__("home.project_name_iot_device")

    section#contact
      .container
        .row
          .col-lg-8.col-lg-offset-2.text-center
            a.btn.btn-primary.btn-l= __("home.email_us")

